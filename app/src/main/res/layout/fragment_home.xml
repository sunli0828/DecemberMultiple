<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:orientation="horizontal"
        android:background="#fff"
        android:layout_gravity="center_vertical">
        <ImageView
            android:id="@+id/fragment_home_common_btn_menu"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_24" android:layout_marginTop="@dimen/dp_35"
            android:src="@mipmap/common_btn_menu"
            android:visibility="visible" />
        <EditText
            android:padding="@dimen/dp_5"
            android:layout_width="@dimen/dp_200"
            android:layout_height="@dimen/dp_35"
            android:layout_marginLeft="@dimen/dp_75" android:layout_marginTop="@dimen/dp_35"
            android:background="@drawable/edit_corners"
            android:hint="请输入您要搜索的商品"
            android:textSize="@dimen/sp_12"
            android:id="@+id/fragment_home_search_edit_keyword"/>
        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_24" android:layout_marginTop="@dimen/dp_38"
            android:src="@mipmap/common_nav_btn_search_n_hdpi"
            android:layout_alignParentRight="true"
            android:id="@+id/fragment_home_search_icon_go"/>
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:id="@+id/fragment_home_search_recyclerview"
        android:visibility="gone"></android.support.v7.widget.RecyclerView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_200"
        android:visibility="gone"
        android:id="@+id/relative_search_none">
        <ImageView
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100"
            android:src="@mipmap/meiyoushop"
            android:layout_centerHorizontal="true"
            android:id="@+id/fragment_home_search_none"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="抱歉，没有找到商品(⊙o⊙)…"
            android:layout_below="@id/fragment_home_search_none"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_20"/>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_20"
        android:id="@+id/fragment_home_second_catrgory_item_recyclerview"
        android:visibility="gone"></android.support.v7.widget.RecyclerView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl"
        android:visibility="visible"
        android:id="@+id/fragment_home_scrollview">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipChildren="false"
                android:layerType="software"
                android:id="@+id/fol_lnlay"
                android:layout_marginTop="@dimen/dp_20"
                >
                <com.stx.xhb.xbanner.XBanner
                    android:id="@+id/fragment_home_xbanner_image"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_160"
                    android:layout_marginLeft="@dimen/dp_24"
                    android:layout_marginRight="@dimen/dp_24"
                    android:clipChildren="false"
                    app:AutoPlayTime="3000"
                    app:isShowIndicatorOnlyOne="false"
                    app:isShowNumberIndicator="true"
                    app:pageChangeDuration="800"
                    />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:id="@+id/rl1"
                android:background="@mipmap/bg_rxxp_syf"
                android:layout_below="@id/fol_lnlay"
                android:layout_marginTop="@dimen/dp_20">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_16"
                    android:textColor="#ff7f57"
                    android:text="热销新品"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"/>
                <ImageView
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_12"
                    android:src="@mipmap/common_btn_more_yellow_n_hdpi"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp_9"
                    android:layout_marginRight="@dimen/dp_24"
                    android:id="@+id/fragment_home_image_hotsale_more"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_166"
                android:layout_below="@id/rl1"
                android:id="@+id/rl2"
                android:background="#fff">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/fragment_home_hotsale_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    ></android.support.v7.widget.RecyclerView>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:layout_below="@id/rl2"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@mipmap/bg_mlss_syf">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="魔力时尚"
                    android:textColor="@android:color/holo_purple"
                    android:textSize="@dimen/sp_16" />

                <ImageView
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_12"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp_9"
                    android:layout_marginRight="@dimen/dp_24"
                    android:src="@mipmap/home_btn_more_purple_n_hdpi"
                    android:id="@+id/fragment_home_image_magicfashion_more"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_260"
                android:layout_below="@id/rl3"
                android:background="#fff"
                android:id="@+id/rl4">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/fragment_home_magicfashion_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    ></android.support.v7.widget.RecyclerView>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl5"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:layout_below="@id/rl4"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@mipmap/bg_pzsh_syf">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="品质生活"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/sp_16" />

                <ImageView
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_12"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp_9"
                    android:layout_marginRight="@dimen/dp_24"
                    android:src="@mipmap/home_btn_moer_pink_n_hdpi"
                    android:id="@+id/fragment_home_image_qualitylife_more"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_358"
                android:layout_below="@id/rl5"
                android:background="#fff">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/fragment_home_qualitylife_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    ></android.support.v7.widget.RecyclerView>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/fragment_home_classify_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_43"
        android:background="@mipmap/bg_one"
        android:layout_below="@id/rl"
        android:layout_marginTop="@dimen/dp_5"
        android:visibility="gone"
        ></android.support.v7.widget.RecyclerView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/fragment_home_classify_recyclerview_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_92"
        android:background="#455d5d5d"
        android:layout_below="@id/fragment_home_classify_recyclerview"
        android:visibility="gone"
        ></android.support.v7.widget.RecyclerView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl"
        android:id="@+id/rl6"
        android:visibility="gone"
        android:layout_marginTop="@dimen/dp_20"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:background="@mipmap/bg_rxxp_syf"
            android:id="@+id/rl6_icon"/>
        <ImageView
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:src="@mipmap/common_nav_btn_back_n_xhdpi"
            android:layout_marginTop="@dimen/dp_9"
            android:layout_marginLeft="10dp"
            android:id="@+id/fragment_home_hotsale_more_btn_back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="热销新品"
            android:textSize="@dimen/sp_16"
            android:textColor="#ff7f57"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_5"
            />
        <com.jcodecraeer.xrecyclerview.XRecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/rl6_icon"
            android:layout_marginTop="@dimen/dp_10" android:layout_marginRight="@dimen/dp_10" android:layout_marginLeft="@dimen/dp_10"
            android:id="@+id/fragment_home_hotsale_more_recyclerview"
            ></com.jcodecraeer.xrecyclerview.XRecyclerView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl"
        android:id="@+id/rl7"
        android:visibility="gone"
        android:layout_marginTop="@dimen/dp_20"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:background="@mipmap/bg_rxxp_syf"
            android:id="@+id/rl7_icon"/>
        <ImageView
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:src="@mipmap/common_nav_btn_back_n_xhdpi"
            android:layout_marginTop="@dimen/dp_9"
            android:layout_marginLeft="10dp" android:id="@+id/fragment_home_magicfashion_more_btn_back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="魔力时尚"
            android:textSize="@dimen/sp_16"
            android:textColor="@android:color/holo_purple"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_5"
            />
        <com.jcodecraeer.xrecyclerview.XRecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/rl7_icon"
            android:layout_marginTop="@dimen/dp_10" android:layout_marginRight="@dimen/dp_10" android:layout_marginLeft="@dimen/dp_10"
            android:id="@+id/fragment_home_magicfashion_more_recyclerview"
            ></com.jcodecraeer.xrecyclerview.XRecyclerView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl"
        android:id="@+id/rl8"
        android:visibility="gone"
        android:layout_marginTop="@dimen/dp_20"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:background="@mipmap/bg_rxxp_syf"
            android:id="@+id/rl8_icon"/>
        <ImageView
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:src="@mipmap/common_nav_btn_back_n_xhdpi"
            android:layout_marginTop="@dimen/dp_9"
            android:layout_marginLeft="10dp" android:id="@+id/fragment_home_qualitylife_more_btn_back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="品质生活"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/colorAccent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_5"
            />
        <com.jcodecraeer.xrecyclerview.XRecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/rl8_icon"
            android:layout_marginTop="@dimen/dp_10" android:layout_marginRight="@dimen/dp_10" android:layout_marginLeft="@dimen/dp_10"
            android:id="@+id/fragment_home_qualitylife_more_recyclerview"
            ></com.jcodecraeer.xrecyclerview.XRecyclerView>
    </RelativeLayout>
</RelativeLayout>



