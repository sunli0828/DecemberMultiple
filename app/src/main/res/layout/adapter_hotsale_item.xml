<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="@dimen/dp_105"
        android:layout_height="@dimen/dp_166"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/coners">
        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="@dimen/dp_85"
            android:layout_height="@dimen/dp_99"
            android:layout_margin="@dimen/dp_10"
            android:id="@+id/adapter_hotsale_item_icon"
            />
        <TextView
            android:layout_width="@dimen/dp_85"
            android:layout_height="@dimen/dp_13"
            android:textSize="@dimen/sp_11"
            android:text="1233"
            android:textColor="#666666"
            android:layout_marginLeft="@dimen/dp_10"
            android:id="@+id/adapter_hotsale_item_text_name"/>
        <TextView
            android:layout_width="@dimen/dp_70"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:textColor="#ff0000"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:id="@+id/adapter_hotsale_item_text_price"/>
    </LinearLayout>
</RelativeLayout>