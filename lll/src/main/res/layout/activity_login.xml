<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/login_bg"
    android:layout_height="match_parent"
    tools:context=".activity.LoginActivity">

    <EditText
        android:inputType="number"
        android:paddingBottom="15dp"
        android:id="@+id/login_mobile"
        android:layout_marginLeft="50dp"
        android:textColorHint="#fff"
        android:layout_marginRight="50dp"
        android:drawableLeft="@mipmap/login_icon_phone_n_xhdpi"
        android:layout_marginTop="@dimen/dp_120"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="20dp"
        android:textSize="18sp"
        android:hint="手机号"
        android:paddingLeft="10dp"
        android:textColor="#fff"
        android:background="@null"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="#fff"/>

    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="50dp"
        android:orientation="horizontal"
        android:layout_marginRight="50dp"
        android:layout_height="wrap_content">

        <EditText
            android:layout_weight="1"
            android:paddingBottom="15dp"
            android:password="true"
            android:id="@+id/login_password"
            android:textColorHint="#fff"
            android:drawableLeft="@mipmap/login_icon_lock_n_xhdpi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="20dp"
            android:textSize="18sp"
            android:hint="登录密码"
            android:textColor="#fff"
            android:paddingLeft="10dp"
            android:background="@null"
            />

        <ImageView
            android:id="@+id/login_showpwd"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/login_icon_eye_n_hdhpi"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="#fff"/>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <CheckBox
            android:buttonTint="#fff"
            android:id="@+id/login_remeberpwd"
            android:text="记住密码"
            android:textColor="#fff"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/login_register"
            android:gravity="right"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#fff"
            android:text="快速注册"/>

    </LinearLayout>

    <Button
        android:background="@drawable/shape"
        android:textSize="18sp"
        android:text="登录"
        android:id="@+id/login_login"
        android:textColor="#333"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_width="match_parent"
        android:layout_height="50sp" />


</LinearLayout>